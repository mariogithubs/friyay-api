- link_styles = 'display: block; text-decoration: none; padding: 5px; background-color: #ffffff; color: rgb(54,154,207); border: 1px solid #cccccc; text-align: center; font-weight: 300; border-radius: 12px; line-height: 2; width: 100px;'

%table{style: 'width: 100%;'}
  %tr
    %td
      %p
        ="Hello #{@invitation.email},"
      %p
        - if @domain.tenant_name != 'public'
          = t('notifications.invitations.reminder.private', domain: @domain.tenant_name, user: @invitation.user.name)
        - else
          = t('notifications.invitations.reminder.public', user: @invitation.user.name)
  %tr
    %td{style: 'padding-top: 40px;'}
      %p
        = link_to t('notifications.invitations.learn'), @invite_url, style: link_styles + 'width: 400px; margin: 0 auto;'

