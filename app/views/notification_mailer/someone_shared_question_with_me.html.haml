- link_styles = 'display: block; text-decoration: none; padding: 5px; background-color: #ffffff; color: rgb(54,154,207); border: 1px solid #cccccc; text-align: center; font-weight: 300; border-radius: 12px; line-height: 2; width: 100px;'

%table{style: 'width: 100%;'}
  %tr
    %td
      %p
        ="Hello #{@notification.user.first_name},"
      %p
        = @notification.notifier.name
        just asked you a question:
        = @question.title

      %p
        - link_url = strip_version(v2_question_url(@question, host: @domain.host_url, protocol: 'https'))
        = link_to "Answer #{@notification.notifier.first_name}'s Question", link_url, style: link_styles + 'width: 200px; margin: 0 auto;'