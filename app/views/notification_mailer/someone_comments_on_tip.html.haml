- link_styles = 'display: block; text-decoration: none; padding: 5px; background-color: #ffffff; color: rgb(54,154,207); border: 1px solid #cccccc; text-align: center; font-weight: 300; border-radius: 12px; line-height: 2; width: 100px;'

%table{style: 'width: 100%;'}
  %tr
    %td{colspan: 2}
      %p
        = "Hello #{@notification.user.first_name}, "
      %p
        = @notification.notifier.name
        just commented on your Tip:
        %strong
          = @notification.notifiable.commentable.title
  %tr
    %td{style: 'text-align: center;width: 50px;'}
      #quote
        =image_tag "https://s3-us-west-2.amazonaws.com/tiphiveupload/assets/blockquote_30px.png"
    %td{style: 'font-style: italic;'}
      = @notification.notifiable.body.html_safe
  %tr
    %td{colspan: 2, style: 'padding-top: 40px;'}
      %p
        - link_url = strip_version(v2_tip_url(@tip, host: @domain.host_url, protocol: 'https'))
        = link_to "Join Conversation", link_url, style: link_styles + 'width: 200px; margin: 0 auto;'

      / %p
      /   = link_to "Reply to comment", strip_version(v2_comment_url(@notification.notifiable, host: @domain))
