- link_styles = 'display: block; text-decoration: none; padding: 5px; background-color: #ffffff; color: rgb(54,154,207); border: 1px solid #cccccc; text-align: center; font-weight: 300; border-radius: 12px; line-height: 2; width: 100px;'

%table{style: 'width: 100%;'}
  %tr
    %td
      %p
        = "Hello #{@notification.user.first_name},"
      %p
        = @notification.notifier.name
        answered your question:
        = @question.title
      %p
        = "#{@answer.body}"
  %tr
    %td{style: 'padding-top: 40px;'}
      %p
        - link_url = strip_version(v2_comment_url(@answer, host: @domain.host_url, protocol: 'https'))
        = link_to "Thank #{@notification.notifier.first_name} with a reply", link_url, style: link_styles + 'width: 250px; margin: 0 auto;'