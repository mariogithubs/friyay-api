!!!
%html{lang: 'en'}
  %head
    %meta{charset: 'utf-8'}
    %meta{content: 'IE=edge', 'http-equiv' => 'X-UA-Compatible'}
    %meta{content: 'width=device-width, initial-scale=1', name: 'viewport'}
    %title Friyay Notification
  %body.user-mailer{style: "padding: 30px 0; font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif; line-height: 1.25; width: 100%; font-size: 14px; font-weight: 400;"}
    .container{style: "width: 50%; max-width: 500px; margin: 0 auto; padding: 30px; background-color: #FFFFFF; font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;"}
      #logo{style: 'text-align: center;'}
        =image_tag "https://s3-us-west-2.amazonaws.com/tiphiveupload/assets/Friyay_wide_145.png", style: 'width: 150px; margin-left: 20px;'
      -unless @domain.is_a?(String)
        -if @domain && @domain.try(:tenant_name) != 'public'
          .domain-name{style: 'text-align:center;'}
            %strong
              for
              = @domain.name
      .body-copy{style: "min-height: 400px; font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;"}
        = yield
      .body-extra
        = yield :body_extra
      .footer
        %p{style: "text-align: center; margin-top: 30px; font-size: 0.8em; font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;"}
          Change notification frequency in your
          = link_to 'notification settings', "https://#{ENV['TIPHIVE_HOST']}?pop=setting", style: 'color: #369ACFA;'
